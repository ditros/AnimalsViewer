@model AnimalsViewer.Models.CAnimal

@using (Html.BeginForm("Update", "Animals", FormMethod.Get)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Animal</legend>

        <div>
            @Html.LabelFor(model => model.Name)
        </div>
        <div>
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div>
            @Html.LabelFor(model => model.AnimalType)
        </div>
        <div>
            @*Html.EditorFor(model => model.AnimalType)*@
            @Html.DropDownListFor(model => model.AnimalType, Model.AnimalTypes)
            @Html.ValidationMessageFor(model => model.AnimalType)
        </div>

        <div>
            @Html.LabelFor(model => model.SkinColor)
        </div>
        <div>
            @*Html.EditorFor(model => model.SkinColor)*@
            @Html.DropDownListFor(model => model.SkinColor, Model.SkinColors)
            @Html.ValidationMessageFor(model => model.SkinColor)
        </div>
        
        <div>
            @Html.LabelFor(model => model.Location)
        </div>
        <div>
            @*Html.EditorFor(model => model.Location)*@
            @Html.DropDownListFor(model => model.Location, Model.Locations)
            @Html.ValidationMessageFor(model => model.Location)
        </div>

        <p>
            <input type="submit" value="Update" />
        </p>
    </fieldset>
}